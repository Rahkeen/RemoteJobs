<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:padding="@dimen/eight_pixels">

    <TextView
        android:id="@+id/job_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a test of the number one text view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/company_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="This is a test of the second textView"
        app:layout_constraintTop_toBottomOf="@+id/job_name_text_view"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>